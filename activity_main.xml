<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.shubham.braintrainer.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible">

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gd1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:text="@string/krr"
                android:textSize="40sp" />

            <GridLayout
                android:id="@+id/gd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/timerText"
                android:layout_alignStart="@+id/timerText"
                android:layout_below="@+id/sumText">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:background="@color/colorAccent"
                    android:onClick="chooseAnswer"
                    android:tag="0"
                    android:text="@string/a6"
                    android:textSize="80sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:background="@android:color/holo_blue_bright"
                    android:onClick="chooseAnswer"
                    android:tag="1"
                    android:text="@string/a6"
                    android:textSize="80sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="chooseAnswer"
                    android:tag="2"
                    android:text="@string/a6"
                    android:textSize="80sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:background="@android:color/holo_orange_dark"
                    android:onClick="chooseAnswer"
                    android:tag="0"
                    android:text="@string/a6"
                    android:textSize="80sp" />
            </GridLayout>

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="13dp"
                android:background="@android:color/holo_orange_dark"
                android:padding="10dp"
                android:text="@string/s30"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/pointsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/timerText"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="0/0"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/timerText"
                android:layout_alignBottom="@+id/timerText"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:text="@string/number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result"
                android:layout_centerHorizontal="true"
                android:onClick="playAgain"
                android:text="@string/dobara"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:onClick="start"
            android:padding="20dp"
            android:text="@string/suru"
            android:textSize="80sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
